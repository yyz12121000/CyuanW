<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f9f9f9">

    <include
        layout="@layout/layout_common_title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/id_iv_image"
            android:layout_width="210dp"
            android:layout_height="142dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="84dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_identify"/>

        <Button
            android:id="@+id/id_btn_selectpic"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="上传身份证正面照"
            android:textSize="16dp"
            android:textColor="#ffffff"
            android:background="@drawable/bg_green_4dp"/>
        <ImageView
            android:id="@+id/id_iv_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:src="@mipmap/ic_confirm"
            android:visibility="gone"/>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <include
        android:id="@+id/id_oper_carset"
        layout="@layout/layout_common_oper2" />

    <Button
        android:id="@+id/id_btn_submit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="提交认证"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:background="@drawable/bg_red_4dp"/>

</LinearLayout>
