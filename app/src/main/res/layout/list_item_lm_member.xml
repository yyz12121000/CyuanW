<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingBottom="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <ImageView
            android:id="@+id/gx_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/jiangyiyan" />

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/gx_iv"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_toRightOf="@+id/gx_iv"
                android:text="苗王子"
                android:textColor="#333333"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/is_leader"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@mipmap/icon_1"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_name"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/gx_iv"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="苗王子"
            android:textColor="#999999"
            android:textSize="12sp" />

        <include
            layout="@layout/line_h_a"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>


    <!-- 以下都是侧滑菜单的内容依序排列 -->
    <!--android:background="#76D0A3"-->
    <Button
        android:id="@+id/left"
        android:layout_width="102dp"
        android:layout_height="match_parent"
        android:background="#F5A623"
        android:clickable="true"
        android:text="取消管理员"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/delete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="#F46E65"
        android:text="删除"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>