<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

            <ImageView
                android:id="@+id/id_iv_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/bg_user"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="160dp"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/id_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="100dp"
                    android:text="姓名"
                    android:textColor="#333333"
                    android:textSize="14dp"/>
                <ImageView
                    android:id="@+id/id_iv_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/id_tv_name"
                    android:src="@mipmap/ic_user_confirm"/>
                <ImageView
                    android:id="@+id/id_iv_persion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/id_iv_confirm"
                    android:src="@mipmap/ic_user_persionconfirm"/>
                <TextView
                    android:id="@+id/id_tv_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/id_iv_persion"
                    android:text=""
                    android:textColor="#EA6F5A"
                    android:textSize="14dp"/>
                <ImageView
                    android:id="@+id/id_iv_modify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_3"/>
                <TextView
                    android:id="@+id/id_tv_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="100dp"
                    android:layout_below="@id/id_tv_name"
                    android:text="车行:宁波春天二手行"
                    android:textColor="#333333"
                    android:textSize="14dp"
                    android:maxLines="1"/>
                <TextView
                    android:id="@+id/id_tv_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_below="@id/id_tv_shop"
                    android:text="从业10余年从业10余年从业10余年从业10余年从业10余年从业10余年从业10余年"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    android:maxLines="2"/>
                <View
                    android:id="@+id/id_view_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/id_tv_sign"
                    android:layout_marginTop="10dp"
                    android:background="#f4f4f4"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_below="@+id/id_view_line"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="在售车源"
                        android:textColor="#EA6F5A"
                        android:textSize="14dp"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:background="#999999"/>

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="在售车源"
                        android:textColor="#EA6F5A"
                        android:textSize="14dp"/>

                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/id_iv_photo"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="130dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_defaultphoto"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/id_iv_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_1"/>
        <LinearLayout
            android:id="@+id/search_ll"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:background="@drawable/bt_hs_bg_4dp"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="8dp"
                android:src="@mipmap/ing_35" />

            <EditText
                android:id="@+id/search_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:hint="搜索你需要的车源"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#999999"
                android:textSize="14sp" />
        </LinearLayout>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_2"/>
    </RelativeLayout>

</FrameLayout>
