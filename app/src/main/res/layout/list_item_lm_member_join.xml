<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <ImageView
        android:id="@+id/gx_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/jiangyiyan" />

    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/gx_iv"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@+id/gx_iv"
            android:text="苗王子"
            android:textColor="#333333"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@+id/gx_iv"
            android:text="舟山·朱家尖"
            android:textColor="#999999"
            android:textSize="12dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_name"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/gx_iv"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="苗王子"
        android:textColor="#999999"
        android:textSize="12sp" />

    <Button
        android:id="@+id/pass"
        android:layout_width="52dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/bg_green_4dp"
        android:text="通过"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <Button
        android:id="@+id/dispass"
        android:layout_width="52dp"
        android:layout_height="28dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@+id/pass"
        android:background="@drawable/bt_red_bg"
        android:text="拒绝"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <include
        layout="@layout/line_v_a"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>