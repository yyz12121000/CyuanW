<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/id_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_notice1"/>

    <TextView
        android:id="@+id/id_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/id_item_icon"
        android:text="系统通知"
        android:textColor="#333333"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/id_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:text="2018-10-20"
        android:textColor="#999999"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/id_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_item_title"
        android:layout_toRightOf="@+id/id_item_icon"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="系统通知系统通知系统通知系统通知"
        android:textColor="#999999"
        android:textSize="12dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#f9f9f9"/>

</RelativeLayout>
