<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="81dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical"
        android:background="@drawable/rect_border_bg14">

        <Button
            android:id="@+id/id_btn_camera"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_gravity="bottom"
            android:text="拍照"
            android:textColor="#F54F4F"
            android:textSize="20dp"
            android:background="@drawable/rect_border_bg15"
            style="?android:attr/borderlessButtonStyle"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dedede"/>
        <Button
            android:id="@+id/id_btn_selectpic"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_gravity="bottom"
            android:text="从相册选择"
            android:textColor="#007aff"
            android:textSize="20dp"
            android:background="@drawable/rect_border_bg16"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

    <Button
        android:id="@+id/id_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_gravity="bottom"
        android:layout_margin="12dp"
        android:text="取消"
        android:textColor="#007aff"
        android:textSize="20dp"
        android:background="@drawable/rect_border_bg14"
        style="?android:attr/borderlessButtonStyle"/>

</FrameLayout>
